#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2
MEDIAINFO_VERSION="0.7.64"
ARCHIVE="mediainfo-${MEDIAINFO_VERSION}.tar.gz"

# config
echo "-----> Extract mediainfo"
echo "we are:"$(pwd)
mkdir -p "${BUILD_DIR}/vendor"
echo "created vendor"
rm -R "${BUILD_DIR}/vendor/mediainfo" 2> /dev/null
echo "removed mediainfo"
tar -xf "${ARCHIVE}" -C "${BUILD_DIR}/vendor"
echo $(ls -la)
echo "extracted ${ARCHIVE} to ${BUILD_DIR}/vendor"

echo "-----> Exporting PATH and LIBRARY_PATH"
PROFILE_PATH="$BUILD_DIR/.profile.d/mediainfo.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/mediainfo"' >> $PROFILE_PATH
